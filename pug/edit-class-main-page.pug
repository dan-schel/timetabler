include icons.pug

mixin edit-class-main-page
  div&attributes(attributes)
    h2.when-new Add class
    h2.when-edit Edit class

    #edit-class-main-page-error-ui.when-error
      +icon("uil:exclamation-circle")
      p#edit-class-main-page-error-text Name can't be empty

    #edit-class-main-page-ntc-wrap
      label.text-input
        p.label Name
        input#edit-class-main-page-name-input(type="text", autocomplete="off", placeholder="e.g. Advanced Tin Opening")
      label.text-input
        p.label Type
        input#edit-class-main-page-type-input(type="text", autocomplete="off", placeholder="e.g. Lecture")
      p.label Colour
      #edit-class-main-page-color-picker

    p.label Options
    button#edit-class-main-page-add-option-button
      +icon("uil:plus")
      p ADD OPTION

    #edit-class-main-page-options

    #edit-class-main-page-footer-wrap
      label#edit-class-main-page-optional-switch-label.switch
        input#edit-class-main-page-optional-switch(type="checkbox", autocomplete="off")
        div
          .switch-graphic
          .switch-content
            p Class is optional

      button#edit-class-main-page-submit-button
        +icon("uil:check")
        p.when-new Add to timetable
        p.when-edit Save changes
