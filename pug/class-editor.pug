include icons.pug

mixin class-editor
  div&attributes(attributes)
    //- Title
    h2.when-new Add class
    h2.when-edit Edit class

    //- "Name" field.
    label.field.text-input
      p.label Name
      input#class-editor-name-input(
        type="text", autocomplete="off", placeholder="e.g. Advanced Tin Opening")

    //- "Type" field.
    label.field.text-input
      p.label Type
      input#class-editor-type-input(
        type="text", autocomplete="off", placeholder="e.g. Lecture")

    //- "Colour" picker.
    .field
      p.label Colour
      #class-editor-color-picker

    //- "Options" section
    .field
      p.label Options
      button#class-editor-add-option-button
        +icon("uil:plus")
        p ADD OPTION

    #class-editor-options
      //- Populates with options. Flex grows to fill dialog.

    //- "Class is optional" switch.
    label#class-editor-optional-switch
      input#class-editor-optional-switch-input(type="checkbox", autocomplete="off")
      div
        .switch-graphic
        .switch-content
          p Class is optional

    //- Error message UI. Hides when not in use.
    #class-editor-error-ui.when-error
      +icon("uil:exclamation-circle")
      p#class-editor-error-text

    //- "Add class to timetable/save changes" button.
    button#class-editor-submit-button
      +icon("uil:check")
      p.when-new Add class to timetable
      p.when-edit Save changes
