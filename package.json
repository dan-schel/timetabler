{
  "name": "timetabler",
  "version": "1.0.0",
  "description": "A tool to help choose options on a timetable where there might be multiple classes running!",
  "scripts": {
    "clean": "rimraf build/*",
    "prebuild": "npm run clean",
    "build": "npm run build:html & npm run build:sass & npm run build:ts & npm run build:other",
    "build:html": "node build-html.js",
    "build:sass": "sass scss/main.scss build/main.css --style compressed",
    "build:ts": "esbuild ts/main.ts --bundle --minify --outfile=build/main.js",
    "build:other": "copyfiles -u 1 \"other/**/*\" build",
    "dev": "npm run builddev & concurrently \"npm run watch:html\" \"npm run watch:sass\" \"npm run watch:ts\" \"npm run watch:other\" \"serve build\"",
    "prebuilddev": "npm run clean",
    "builddev": "npm run build:html & npm run builddev:sass & npm run builddev:ts & npm run build:other",
    "builddev:sass": "sass scss/main.scss build/main.css",
    "builddev:ts": "esbuild ts/main.ts --bundle --outfile=build/main.js",
    "watch:html": "onchange \"pug/**/*\" -- npm run build:html",
    "watch:sass": "sass -w scss/main.scss build/main.css",
    "watch:ts": "esbuild ts/main.ts --bundle --watch --sourcemap --outfile=build/main.js",
    "watch:other": "onchange \"other/**/*\" -- npm run build:other",
    "lint": "eslint . & tsc --project ts/tsconfig.json --noemit",
    "start": "serve build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schel-d/timetabler.git"
  },
  "keywords": [],
  "author": "schel-d",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/schel-d/timetabler/issues"
  },
  "homepage": "https://github.com/schel-d/timetabler#readme",
  "dependencies": {
    "concurrently": "^7.5.0",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.15.12",
    "onchange": "^7.1.0",
    "pug": "^3.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.56.2",
    "schel-d-utils": "^2.4.0",
    "schel-d-utils-browser": "^2.1.2",
    "typescript": "^4.8.4",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "2.7.1"
  }
}
